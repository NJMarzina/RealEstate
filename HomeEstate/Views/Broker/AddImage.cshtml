@model HomeLibrary.AddImagiesModel

@{
    ViewData["Title"] = "Add Image URL";
}

<div class="container mt-5">
    <div class="card mx-auto shadow-lg" style="max-width: 600px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Add Image URL</h2>

            <form asp-controller="Broker" asp-action="AddImage" method="post">
                <input type="hidden" asp-for="HomeId" />

                <div class="mb-3">
                    <label asp-for="ImiageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImiageUrl" class="form-control" type="text" placeholder="Enter Image URL" required />
                    <span asp-validation-for="ImiageUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Save Image</button>
            </form>
        </div>
    </div>
</div>
