@model HomeLibrary.HomeDetails

@{
    ViewData["Title"] = "Detail Page";
}

<div class="container mt-5">
    <div class="card mx-auto shadow-lg" style="max-width: 800px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Home Details</h2>
            <div class="mb-3">
                <p><strong>Address:</strong> @Model.AddressNumber @Model.AddressName</p>
                <p><strong>City:</strong> @Model.AddressCity</p>
                <p><strong>State:</strong> @Model.AddressState</p>
                <p><strong>Zip:</strong> @Model.AddressZip</p>
                <p><strong>Property Type:</strong> @Model.PropertyType</p>
                <p><strong>Year Built:</strong> @Model.YearBuild</p>
                <p><strong>Heating:</strong> @Model.Heating</p>
                <p><strong>Cooling:</strong> @Model.Cooling</p>
                <p><strong>Price:</strong> @Model.AskingPrice</p>
                <p><strong>Utilities:</strong> @Model.Utilities</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Garage:</strong> @Model.Garage</p>
                <p><strong>Bedrooms:</strong> @Model.BedroomCount</p>
                <p><strong>Bathrooms:</strong> @Model.BathroomCount</p>
            </div>
        </div>
        <div class="card-footer bg-light">
            <h3 class="text-center">Broker Information</h3>
            <div class="mt-3">
                <p><strong>Broker Address:</strong> @Model.WorkAddressNumber @Model.WorkAddressName</p>
                <p><strong>Broker Email:</strong> @Model.WorkEmail</p>
                <p><strong>Real Estate Company:</strong> @Model.RealEstateCompany</p>
                <p><strong>Company Phone:</strong> @Model.CompanyPhone</p>
            </div>
        </div>
    </div>
</div>
