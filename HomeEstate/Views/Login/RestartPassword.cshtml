@model HomeEstate.Models.ResetPasswordModel

@{
    ViewData["Title"] = "Restart Password";
}

<h2>Restart Password</h2>
<p>Processing password reset for the provided username...</p>
<p>@ViewData["Username"]</p>


<form asp-controller="Login" asp-action="RestartPassword" method="post">
    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" id="NewPassword" name="NewPassword" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" required />
    </div>
    <input type="hidden" name="username" value="@ViewData["Username"]" />
    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
