@model HomeEstate.Models.RegisterModel

<h2>Register</h2>

<form asp-controller="Login"  asp-action="Registers" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" type="text" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserPassword" class="control-label"></label>
        <input asp-for="UserPassword" class="form-control" type="password" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" type="text" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HomeEmail" class="control-label"></label>
        <input asp-for="HomeEmail" class="form-control" type="email" />
        <span asp-validation-for="HomeEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressName" class="control-label"></label>
        <input asp-for="AddressName" class="form-control" type="text" />
        <span asp-validation-for="AddressName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressNumber" class="control-label"></label>
        <input asp-for="AddressNumber" class="form-control" type="number" />
        <span asp-validation-for="AddressNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkAddressName" class="control-label"></label>
        <input asp-for="WorkAddressName" class="form-control" type="text" />
        <span asp-validation-for="WorkAddressName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkAddressNumber" class="control-label"></label>
        <input asp-for="WorkAddressNumber" class="form-control" type="text" />
        <span asp-validation-for="WorkAddressNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkEmail" class="control-label"></label>
        <input asp-for="WorkEmail" class="form-control" type="email" />
        <span asp-validation-for="WorkEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RealEstateCompany" class="control-label"></label>
        <input asp-for="RealEstateCompany" class="form-control" type="text" />
        <span asp-validation-for="RealEstateCompany" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CompanyPhone" class="control-label"></label>
        <input asp-for="CompanyPhone" class="form-control" type="text" />
        <span asp-validation-for="CompanyPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Security Question</label>
        <input class="form-control" type="text" value="What is your mother's maiden name?" readonly />
        <input asp-for="SecurityQuestion1" type="hidden" value="What is your mother's maiden name?" />
    </div>
    <div class="form-group">
        <label asp-for="SecurityAnswer1" class="control-label">Your Answer</label>
        <input asp-for="SecurityAnswer1" class="form-control" type="text" required />
        <span asp-validation-for="SecurityAnswer1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Security Question</label>
        <input class="form-control" type="text" value="What is your favorite Color?" readonly />
        <input asp-for="SecurityQuestion2" type="hidden" value="What is your favorite Color?" />
    </div>
    <div class="form-group">
        <label asp-for="SecurityAnswer2" class="control-label">Your Answer</label>
        <input asp-for="SecurityAnswer2" class="form-control" type="text" required />
        <span asp-validation-for="SecurityAnswer2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Security Question</label>
        <input class="form-control" type="text" value="What is your favorite game?" readonly />
        <input asp-for="SecurityQuestion3" type="hidden" value="What is your favorite game?" />
    </div>
    <div class="form-group">
        <label asp-for="SecurityAnswer3" class="control-label">Your Answer</label>
        <input asp-for="SecurityAnswer3" class="form-control" type="text" required />
        <span asp-validation-for="SecurityAnswer3" class="text-danger"></span>
    </div>




    <button type="submit" class="btn btn-primary">Register</button>
</form>
