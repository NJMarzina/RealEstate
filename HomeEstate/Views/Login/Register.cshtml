@model HomeEstate.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HomeEmail" class="form-label"></label>
        <input asp-for="HomeEmail" class="form-control" type="email" />
        <span asp-validation-for="HomeEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressName" class="form-label"></label>
        <input asp-for="AddressName" class="form-control" />
        <span asp-validation-for="AddressName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressNumber" class="form-label"></label>
        <input asp-for="AddressNumber" class="form-control" type="number" />
        <span asp-validation-for="AddressNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>


