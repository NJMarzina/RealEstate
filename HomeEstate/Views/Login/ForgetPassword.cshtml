@model HomeEstate.Models.ResetPasswordModel

@{
    ViewData["Title"] = "Forget Password";
}

<h2>Forget Password</h2>

<form asp-action="ForgetPassword" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

</form>

<form method="post" asp-controller="Login" asp-action="RestartPassword">
    <button type="submit" class="btn btn-primary">Submit Username</button>
</form>
