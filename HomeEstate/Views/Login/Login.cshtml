@model HomeEstate.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-controller="Login" asp-action="CheckLogin" method="post">
    <div class="form-group">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p>
    Don't have an account?
    <a asp-controller="Login" asp-action="Register">Register here</a>.
</p>

<p>
    Forgot your password?
    <a asp-controller="Login" asp-action="ForgetPassword">Forget Your Password?</a>.

</p>